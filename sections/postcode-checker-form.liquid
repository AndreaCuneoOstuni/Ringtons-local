  "name": "Postcode Checker Form",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Form Title"
    }
  ],
  "presets": [
    {
      "name": "Postcode Checker Form"
    }
  ]
}
{% endschema %}
